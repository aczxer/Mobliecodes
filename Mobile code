		static void Displaycashdenomination( int amount)
		{
		int thousand, balance, fivhun, onehun, fifty, twenty, ten, fiv, single;
		thousand = amount / 1000;
		balance = amount % 1000;
		fivhun = balance / 500;
		balance %= 500;
		onehun = balance / 100;
		balance %= 100;
		fifty = balance / 50;
		balance %= 50;
		twenty = balance / 20;
		balance %= 20;
		ten = balance / 10;
		balance %= 10;
		fiv = balance / 5;
		balance %= 5;
		single = balance / 1;
		balance %= 1;
				
		System.out.println("CASH\t\tno.pcs of cash");
			if (thousand > 0) System.out.println("1000\t\t" +thousand);
			if (fivhun > 0) 	System.out.println("500\t\t" +fivhun);
			if (onehun > 0)   System.out.println("100\t\t" +onehun);
			if (fifty > 0)		System.out.println("50\t\t" +fifty);
			if (twenty > 0)		System.out.println("20\t\t" +twenty);
			if (ten > 0)		  System.out.println("10\t\t" +ten);
			if (fiv > 0)		  System.out.println("5\t\t" +fiv);
			if (single > 0)		System.out.println("1\t\t" +single);
		//System.out.println("Remaining balance: "+balance);
		}

